<Application 
    x:Class="EasySave.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:EasySave.WPF"
    xmlns:viewmodels="clr-namespace:EasySave.WPF.ViewModels"
    xmlns:views="clr-namespace:EasySave.WPF.Views"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>

        <ResourceDictionary>
        
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Common.xaml" />
                <ResourceDictionary Source="/Styles/NavigationBar.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodels:BackupJobsViewModel}">
                <views:BackupJobsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:AppSettingsViewModel}">
                <views:AppSettingsView />
            </DataTemplate>
        
        </ResourceDictionary>

    </Application.Resources>
</Application>
