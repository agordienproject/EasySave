<UserControl x:Class="EasySave.Controls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasySave.Controls"
             xmlns:navigators="clr-namespace:EasySave.State.Navigators"
             xmlns:viewmodels="clr-namespace:EasySave.ViewModels"
             xmlns:converters="clr-namespace:EasySave.Converters"
             xmlns:localization="clr-namespace:EasySave.Resources"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:EqualValueToParameterConverter x:Key="EqualValueToParameterConverter" />
    </UserControl.Resources>
    
    <Grid Background="{StaticResource BrushPrimary2}">
        <Grid.Resources>
            <Style BasedOn="{StaticResource NavButton}" TargetType="RadioButton" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Margin="20" HorizontalAlignment="Left" Source="/Resources/prosoft-logo.png" MaxWidth="100" MaxHeight="100"/>
        <RadioButton Grid.Row="1"
                     Padding="20, 15"
                    Content="{x:Static localization:Localization.BackupJobs}"
                    Command="{Binding UpdateCurrentViewModelCommand}"
                    CommandParameter="{x:Static navigators:ViewType.BackupJobs}"
                    IsChecked="{Binding CurrentViewModel, Mode=OneWay, Converter={StaticResource EqualValueToParameterConverter}, ConverterParameter={x:Type viewmodels:BackupJobsListingViewModel}}" />
        <RadioButton Grid.Row="2"
                     Padding="20, 15"
                    Content="{x:Static localization:Localization.Setting}"
                    Command="{Binding UpdateCurrentViewModelCommand}"
                    CommandParameter="{x:Static navigators:ViewType.AppSettings}"
                    IsChecked="{Binding CurrentViewModel, Mode=OneWay, Converter={StaticResource EqualValueToParameterConverter}, ConverterParameter={x:Type viewmodels:AppSettingsViewModel}}" />

