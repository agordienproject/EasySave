<UserControl x:Class="EasySave.WPF.Controls.BackupJobsDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasySave.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid ItemsSource="{Binding BackupJobs}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Backup Name" Binding="{Binding BackupName}"/>
                <DataGridTextColumn Header="Source Directory" Binding="{Binding SourceDirectory}" Width="*"/>
                <DataGridTextColumn Header="Target Directory" Binding="{Binding TargetDirectory}" Width="*"/>
                <DataGridTextColumn Header="Backup Type" Binding="{Binding BackupType}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
