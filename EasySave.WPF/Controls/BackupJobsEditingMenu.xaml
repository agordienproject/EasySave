            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="Name" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ui:SymbolIcon Grid.Column="2" Symbol="AddCircle28" HorizontalAlignment="Center" Height="29"  VerticalAlignment="Top" Width="28" />
        <ui:SymbolIcon Grid.Column="4" Symbol="DeleteDismiss28" HorizontalAlignment="Center" Height="29"  VerticalAlignment="Top" Width="28"/>
        <ui:SymbolIcon Grid.Column="3" Symbol="Edit48" HorizontalAlignment="Center" Height="29" VerticalAlignment="Top" Width="28"/>
